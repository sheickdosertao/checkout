// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // ou POSTGRES_URL_NON_POOLING dependendo do seu setup na vercel
}

model Order {
  id              String   @id @default(cuid()) // ID interno do seu pedido
  transactionId   String   @unique // ID da transação no gateway (BlackCat)
  amount          Int
  description     String?
  customerName    String
  customerEmail   String
  customerCpfCnpj String
  status          String   @default("pending") // pending, paid, cancelled, expired
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
