// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // ou POSTGRES_URL_NON_POOLING dependendo do seu setup na vercel
}

model Order {
  id              String   @id @default(uuid())
  transactionId   String?  @unique // O ? permite valor nulo
  amount          Int
  description     String?
  customerName    String
  customerEmail   String
  customerCpfCnpj String
  status          String   @default("pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
